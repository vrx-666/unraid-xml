<?xml version="1.0"?>
<Container version="2">
  <Name>Bind9</Name>
  <Repository>pwa666/bind9:latest</Repository>
  <Registry>https://hub.docker.com/repository/docker/pwa666/bind9</Registry>
  <Network>br0</Network>
  <MyIP></MyIP>
  <Shell>sh</Shell>
  <Privileged>false</Privileged>
  <Support/>
  <Project>https://github.com/vrx-666/bind9</Project>
  <Overview>Bind9 with Webmin WebUI. Simple DNS for local network. Username and password could by changed by GUI_USER and GUI_PASSWORD ENV variables.</Overview>
  <Category>Network:DNS Status:Beta</Category>
  <WebUI>http://[IP]:[PORT:10000]/</WebUI>
  <TemplateURL/>
  <Icon>https://vrx.pl/bind.png</Icon>
  <ExtraParams/>
  <PostArgs/>
  <CPUset/>
  <DateInstalled>1626117748</DateInstalled>
  <DonateText/>
  <DonateLink/>
  <Description>Bind9 with Webmin WebUI. Simple DNS for local network. Username and password could by changed by GUI_USER and GUI_PASSWORD ENV variables.</Description>
  <Networking>
    <Mode>br0</Mode>
    <Publish>
      <Port>
        <HostPort>53</HostPort>
        <ContainerPort/>
        <Protocol>tcp</Protocol>
      </Port>
      <Port>
        <HostPort>53</HostPort>
        <ContainerPort/>
        <Protocol>udp</Protocol>
      </Port>
      <Port>
        <HostPort>10000</HostPort>
        <ContainerPort/>
        <Protocol>tcp</Protocol>
      </Port>
    </Publish>
  </Networking>
  <Data>
    <Volume>
      <HostDir>/mnt/user/appdata/bind9</HostDir>
      <ContainerDir>/etc/bind</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
  </Data>
  <Environment>
    <Variable>
      <Value>admin</Value>
      <Name>GUI_USER</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value>dificult</Value>
      <Name>GUI_PASSWORD</Name>
      <Mode/>
    </Variable>
  </Environment>
  <Labels/>
  <Config Name="Bind Config" Target="/etc/bind" Default="/mnt/user/appdata/bind9" Mode="rw" Description="Where Your DNS Server should store persistant configs" Type="Path" Display="always" Required="true" Mask="false">/mnt/user/appdata/bind9</Config>
  <Config Name="DNS TCP Port" Target="" Default="53" Mode="tcp" Description="DNS Listening TCP Port, this is used for dns queries" Type="Port" Display="always" Required="true" Mask="false">53</Config>
  <Config Name="DNS UDP Port" Target="" Default="53" Mode="udp" Description="DNS Listening UDP Port, this is used for dns queries" Type="Port" Display="always" Required="true" Mask="false">53</Config>
  <Config Name="WebUI Port" Target="" Default="10000" Mode="tcp" Description="WebUI port, for graphical management" Type="Port" Display="always" Required="true" Mask="false">10000</Config>
  <Config Name="Username" Target="GUI_USER" Default="admin" Mode="" Description="This is WebUI Username for managing DNS&#13;&#10;Default: admin" Type="Variable" Display="always" Required="false" Mask="false">admin</Config>
  <Config Name="Password" Target="GUI_PASSWORD" Default="dificult" Mode="" Description="This is WebUI password for managing DNS.&#13;&#10;Default: dificult" Type="Variable" Display="always" Required="false" Mask="true">dificult</Config>
</Container>
